.tabs{
  
  display: flex;
  background-color: #ffffff;
  position: relative;
}
.tab{
  font-size: 34rpx;
  margin-right: 20rpx;
  color: #777777; 
}
.active{
  color: #000000;
  font-weight: bold;
}
.line{
  width: 70rpx;
  height: 5rpx;
  background-color: #65AC3D;
  position: absolute;
  bottom: -22rpx;
  left: 0;
  transition: all 0.5s;
}
