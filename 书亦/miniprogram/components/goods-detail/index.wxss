.goods-detail{
  display: flex;
  flex-direction: column;
}
.scroll{
  height: 1000rpx;
}
.goods-detail .goods-info .goods-cover{
  width:390rpx ;
  height: 390rpx;
  margin: 0 150rpx;
}
.meta{
  padding: 37rpx 54rpx;
}
.meta .title{
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 34rpx;
}
.meta .description{
  font-size: 24rpx;
  color: #777777;
}
.specs-area{
  padding: 0 54rpx;
}
.specs-list{
  display: flex;
  flex-wrap: wrap;
}
.specs-list .specs{
  box-sizing: border-box;
  width: 170rpx;
  height: 77rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
  line-height: 77rpx;
  font-size: 29rpx;
}
.selected{
  background-color: #dce7d7;
  border: 2rpx solid #63ab3a;
  color: #63ab3a;
}
.label{
  font-size: 29rpx;
  color: #333333;
  margin-bottom: 20rpx ;
  font-weight: 600;
}
.action-area{
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}
.price-num{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 50rpx 0;
}
.price{
  display: flex;
  align-items: baseline;
  font-size: 32rpx;
  font-weight: bold;
}
.num{
  display: flex;
}
.jia,.jian{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #63ab3a;
  color: #ffff;
  text-align: center;
  font-weight: bold;
}
.jian{
  background-color: #9e9e9e;
}
.number{
  margin: 0 20rpx;
}
.submit-btn{
  width: 100%;
  height: 85rpx;
  background:linear-gradient(#6db643,#8fc274,#b1d1a2) ;
  color: #fff;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 42rpx;
}