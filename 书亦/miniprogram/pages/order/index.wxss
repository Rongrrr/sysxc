.order{
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}
.order-card{
  width: 660rpx;
  height: 410rpx;
  border-radius: 10rpx;
  box-shadow: 1rpx 5rpx 8rpx 5rpx #dadada;
  background-color: #ffff;
  padding: 20rpx;
}
.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.header .time{
  font-size: 28rpx;
  color: #b6b6b6;
}
.status{
  font-size: 30rpx;
  color: #333333;
}
.order-num{
  width: 100%;
  height: 100rpx;
  background-color: #f6f6f6;
  padding: 10rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.order-num image,.order-production image{
  width: 100rpx;
  height: 100rpx;
}
.order-num .num{
  font-size: 26rpx;
  margin:0 10rpx;
}
.order-production{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}
.copies{
  font-size: 28rpx;
  color: #777777;
}
.order-btn{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;

  margin-left: auto;
}
.pj-btn,.again-btn{
  width: 150rpx;
  height: 50rpx;
  border: #6db643 2rpx solid;
  border-radius: 30rpx;
  text-align: center;
  color: #6db643;
  margin: 0 10rpx;
  margin-left: auto;
}
.again-btn{
  margin-left: 0;
}