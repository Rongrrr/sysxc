.header{
  width: 100%;
  height: 109rpx;
  box-sizing: border-box;
  padding: 0 25rpx;
  display: flex;
  background-color: #ffffff;
  justify-content: space-between;
  align-items: center;
}
.search{
  width: 250rpx;
  height:58rpx;
  border-radius: 29rpx;
  background-color: #f5f5f5;
  box-sizing: border-box;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #d1d1d1;
}
.store-map{
  width: 100%; 
  position: relative;
  transition: all 0.5s;
}
.current-icon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 5px;
  bottom: 5px;
}
.collapse-area{
  width: 100%;
  height: 70rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: lighter;
}
.collapse-area .icon{
  width: 30rpx;
  height: 30rpx;
}
.store-list{
  width: 100%;
  background-color: #f8f8f8;
  padding: 20rpx 25rpx;
  box-sizing: border-box;
}

.store-area{
  width: 700rpx;
  height: auto;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
}
.store-area .info-box{
  width: 450rpx;
  border-right: 4rpx dotted #89D06D  ;
}
.store-area .location-box image{
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
}
.store-area .info-box .store-title{
  display: flex;
}
.store-area .info-box .store-title image{
  width: 50rpx;
  height: 50rpx;
}
.store-area .info-box .name{
  font-size: 38rpx;
}
.address{
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.address .distance{
  font-size: 30rpx;
  color: #89D06D;
  padding-right: 10rpx;
  margin-right: 10rpx;
  height: 40rpx;
}
.address text{
  font-size: 30rpx;
  color: #777777;
}
.store-area .info-box .work-time{
  font-size: 28rpx;
  color: #9c9c9c;
  margin-top: 40rpx;
}
.store-area .info-box .working{
  font-size: 24rpx;
  color: #89D06D;
  border: 1rpx solid #89D06D;
  border-radius: 5rpx;
  width: 90rpx;
  text-align: center;
  margin-top: 20rpx;
}
.location-box{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.container{
  padding: 20rpx;
}
.container .header{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .header .info .title{
  font-size: 30rpx;
  font-weight: bold;
}
.container .header .info .address{
  font-size: 25rpx;
  color: #777777;
}
.container .header .distance{
  display: flex;
  font-size: 25rpx;
  color: #777777;
}
.container .store-detail-map{
  width: 100%;
  height: 392rpx;
}
.store-detail-btn{
  width: 100%;
  height: 85rpx;
  background:#65AC3D ;
  color: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;

}
.store-detail-btn:hover{
  opacity: 0.7;
}