<view class="page">
    <view class="bg">
      <image src="../../assets/images/memberCart.png" mode=""/>
    </view>
    <view class="myCart">
      <view class="top">
        <view class="left" wx:if="{{!mobile}}">
          <text>{{desensitiveMobile ? desensitiveMobile :"点击登录享受更多会员权益"}}</text>
          <view class="login-btn" bindtap="doLogin">授权登录</view>
        </view>
        <view class="avatar">
          <image src="../../assets/images/head.png" mode=""/>
        </view>
      </view>
      <view class="bottom">
        <view class="equity">
          <view class="box">
            <view class="num">5</view>
            <view class="title">我的礼品券(张)</view>
          </view>
          <view class="box">
            <view class="num">28</view>
            <view class="title">我的积分</view>
          </view>
          <view class="box">
            <view class="num">0.0</view>
            <view class="title">钱包余额</view>
          </view>
        </view>
        <view class="sign-in">
          <image src="../../assets/images/sign-in.png" mode=""/>
          <text class="sign-title">仙草日历</text>
          <text class="sign-tips">坚持签到，抢免单券></text>
        </view>
      </view>
    </view>
    <view class="serve">
      <image src="../../assets/images/studentCart.png" mode=""/>
      <image src="../../assets/images/scoremall.png" mode=""/>
      <image src="../../assets/images/tiktokgift.png" mode=""/>
      <image src="../../assets/images/giftcard.png" mode=""/>
      <image src="../../assets/images/giftexchange.png" mode=""/>
      <image src="../../assets/images/service.png" mode=""/>
    </view>
    <view class="community">
      <image src="../../assets/images/community.png" mode=""/>
    </view>
</view>
