.page{
  box-sizing: border-box;
}
.bg{
  width: 100%;
  height: 630rpx;
}
.bg image{
  width: 100%;
  height: 100%;
}
.myCart{
  width: 660rpx;
  height: 370rpx;
  background-color: #ffffff;
  margin-top: -115rpx;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.myCart .top{
  width: 100%;
  height: 115rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: solid 1rpx #eee;
}
.myCart .top .left text{
  font-size: 22rpx;
  color: rgb(128, 128, 128);
}
.avatar image{
  width: 134rpx;
  height: 134rpx;
  border: 5rpx solid #eee;
  border-radius: 50%;
  margin-top: -45rpx;
}
.login-btn{
  width: 150rpx;
  height: 65rpx;
  border-radius: 7rpx;
  background:linear-gradient(#89D06D,#65AC3D,#89D06D) ;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top:10rpx ;
  margin-left: 10rpx;
}
.myCart .bottom{
  width: 100%;
  height: 254rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.equity{
  height: 110rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
}
.equity .box .title{
 font-size: 28rpx;
 margin: 10rpx;
}
.sign-in{
  width: 587rpx;
  height: 55rpx;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.sign-in image{
  width: 57rpx;
  height: 55rpx;
}
.sign-in .sign-title{
  font-size: 32rpx;
  margin-left: 10rpx;
}
.sign-in .sign-tips{
  text-align: right;
  font-size: 28rpx;
  position: absolute;
  right: 10rpx;
}
.sign-in .sign-tips span{
  color: #65AC3D;
}
.serve{
  width: 660rpx;
  height: 332rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
  flex-wrap: wrap;
  background-color: #fff;
  margin: 20rpx 0;
  border-radius: 20rpx;
}
.serve image{
  width: 145rpx;
  height: 145rpx;
  margin: 5rpx;
  
}
.community image{
  width: 660rpx;
  height: 167rpx;
  margin-bottom: 20rpx;
}
